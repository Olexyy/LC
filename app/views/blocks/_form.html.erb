<%= form_for(@block) do |f| %>
  <%= render partial: Html::PATH_VALIDATION_NOTICE, locals: { form: @block } %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:name) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.text_field :name %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:block_group) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.select :block_group_id, BlockGroup.select_list, prompt: t(:none) %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:weight) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.number_field :weight %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:include_type) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.select :include_type, Block.include_types_list %>
  <%= bootstrap_grid_close %>
    <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
  <%= f.label t(:block_field) %>
    <%= bootstrap_grid_next 6 %>
  <%= f.select :block_field_id, BlockField.select_list_conditional, prompt: t(:none) %>
    <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 6 , Html::CSS_LIST_ITEM, Html::CSS_ACTIONS %>
    <%= f.submit t(:save) %>
  <%= bootstrap_grid_close %>
<% end %>