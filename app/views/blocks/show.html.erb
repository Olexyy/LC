<%= bootstrap_grid_start 12 %>
  <%= h1 t(:block) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:name)) + ': ' + @block.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:block_group)) + ': ' + @block.block_group.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:weight)) + ': ' + @block.weight.to_s %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:include_type)) + ': ' + @block.include_type%>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <% value = (@block.block_field.nil?)? t(:none) : @block.block_field.name %>
  <%= p (lbl t(:block_field)) + ': ' + value %>
<%= bootstrap_grid_close %>
<%= bootstrap_lower_menu 6 %>
  <%= link_to t(:edit), edit_block_path(@block) %>
  <%= link_to t(:delete), block_path(@block), method: :delete, data: { confirm: t(:are_you_sure?) }  %>
  <%= link_to t(:back), blocks_path %>
<%= bootstrap_lower_menu_close %>