<% if @categories.blank? %>
<p>There are no categories in list.</p>
<% else %>

<p>Current categories:</p>

<ul id = "categories">
   <% @categories.each do |c| %>
   <li><%= link_to c.name, {:action => 'show', :id => c.id} -%></li>
   <% end %>
</ul>

<% end %>
<%= lower_menu ({:Add_new => 'new'}) %>