<%= bootstrap_grid_start 12 %>
  <%= h1 t(:lawsuit) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
    <%= p (lbl t(:name)) + ': ' + @lawsuit.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
    <%= p (lbl t(:subcategory)) + ': ' + @lawsuit.subcategory.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
    <%= p (lbl t(:weight)) + ': ' + @lawsuit.weight.to_s %>
<%= bootstrap_grid_close %>
<%= bootstrap_lower_menu 6 %>
  <%= link_to t(:edit), edit_lawsuit_path(@lawsuit) %>
  <%= link_to t(:delete), lawsuit_path(@lawsuit), method: :delete, data: { confirm: t(:are_you_sure?) }  %>
  <%= link_to t(:back), lawsuits_path %>
<%= bootstrap_lower_menu_close %>