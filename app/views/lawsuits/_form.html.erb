<%= form_for(@lawsuit) do |f| %>
<%= render partial: Html::PATH_VALIDATION_NOTICE, locals: { form: @lawsuit } %>
<%= bootstrap_row Html::CSS_FIELD %>
  <%= bootstrap_col 2 %>
    <%= f.label t(:name) %>
  <%= bootstrap_close %>
  <%= bootstrap_col_6 %>
    <%= f.text_field :name %>
  <%= bootstrap_close %>
<%= bootstrap_close %>
<%= bootstrap_row Html::CSS_FIELD %>
  <%= bootstrap_col 2 %>
    <%= f.label t(:subcategory) %>
  <%= bootstrap_close %>
  <%= bootstrap_col_6 %>
    <%= f.select :subcategory_id, Subcategory.select_list, prompt: t(:none) %>
  <%= bootstrap_close %>
<%= bootstrap_close %>
<%= bootstrap_row Html::CSS_FIELD %>
  <%= bootstrap_col 2 %>
    <%= f.label t(:web_resource) %>
  <%= bootstrap_close %>
  <%= bootstrap_col_6 %>
    <%= f.select :web_resource_id, WebResource.select_list, prompt: t(:none) %>
  <%= bootstrap_close %>
<%= bootstrap_close %>
<%= bootstrap_row Html::CSS_FIELD %>
  <%= bootstrap_col 2 %>
    <%= f.label t(:weight) %>
  <%= bootstrap_close %>
  <%= bootstrap_col_6 %>
    <%= f.number_field :weight %>
  <%= bootstrap_close %>
<%= bootstrap_close %>
<%= bootstrap_row Html::CSS_ACTIONS %>
  <%= bootstrap_col_6 Html::CSS_LIST_ITEM %>
    <%= f.submit t(:save) %>
  <%= bootstrap_close %>
<%= bootstrap_close %>
<% end %>
