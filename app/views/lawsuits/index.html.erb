<p id="notice"><%= notice %></p>

<h1>Lawsuits</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Subcategory</th>
      <th>Webresource</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lawsuits.each do |lawsuit| %>
      <tr>
        <td><%= lawsuit.name %></td>
        <td><%= lawsuit.weight %></td>
        <td><%= lawsuit.subcategory_id %></td>
        <td><%= lawsuit.webresource_id %></td>
        <td><%= link_to 'Show', lawsuit %></td>
        <td><%= link_to 'Edit', edit_lawsuit_path(lawsuit) %></td>
        <td><%= link_to 'Destroy', lawsuit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

