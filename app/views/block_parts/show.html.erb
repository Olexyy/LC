<%= bootstrap_grid_start 12 %>
  <%= h1 t(:block_part) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:name)) + ': ' + @block_part.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:block)) + ': ' + @block_part.block.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:weight)) + ': ' + @block_part.weight.to_s %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:text)) + ': ' + @block_part.text%>
<%= bootstrap_grid_close %>
<%= bootstrap_lower_menu 6 %>
  <%= link_to t(:edit), edit_block_part_path(@block_part) %>
  <%= link_to t(:delete), block_part_path(@block_part), method: :delete, data: { confirm: t(:are_you_sure?) }  %>
  <%= link_to t(:back), block_parts_path %>
<%= bootstrap_lower_menu_close %>