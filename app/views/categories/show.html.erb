<%= bootstrap_row %>
  <%= bootstrap_col_12 %>
    <%= h1 t(:category) %>
  <%= bootstrap_close %>
<%= bootstrap_close %>
<%= bootstrap_row %>
  <%= bootstrap_col_6 Html::CSS_SHOW %>
    <%= p (lbl t(:name)) + ': ' + @category.name %>
  <%= bootstrap_close %>
<%= bootstrap_close %>
<%= bootstrap_row %>
  <%= bootstrap_col_6 Html::CSS_SHOW %>
    <%= p (lbl t(:weight)) + ': ' + @category.weight.to_s %>
  <%= bootstrap_close %>
<%= bootstrap_close %>
<%= bootstrap_lower_menu 6 %>
  <%= link_to t(:edit), edit_category_path(@category) %>
  <%= link_to t(:delete), category_path(@category), method: :delete, data: { confirm: t(:are_you_sure?) }  %>
  <%= link_to t(:back), categories_path %>
<%= bootstrap_lower_menu_close %>