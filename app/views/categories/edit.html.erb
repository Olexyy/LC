<div class="row">
  <div class="page-header col-sm-12">
    <h1>Edit Category</h1>
  </div>
</div>
<%= form_for @category, :url =>{:action => 'update', :id =>@category} do |f| %>
<div class="row">
  <div class="col-sm-6 item-list">
    <p>Name: <%= f.text_field 'name' %></p>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 item-list">
      <p>Weight: <%= f.text_field  'weight' %></p>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 item-list">
    <%= f.submit 'Save changes' %>
  </div>
</div>
<% end %>

<%= render :partial => '/layouts/menu', :locals => {:links => {:Back => 'index'} } %>