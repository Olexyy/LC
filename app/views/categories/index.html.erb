<%= bootstrap_row %>
  <%= bootstrap_col_12 %>
    <%= h1 t(:categories) %>
  <%= bootstrap_close %>
<%= bootstrap_close %>
<% if @categories.blank? %>
  <%= bootstrap_row %>
    <%= bootstrap_col_6 Html::CSS_LIST_ITEM %>
      <%= p t(:list_empty), Html::CSS_LEAD %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
<% else %>
  <%= bootstrap_list %>
    <% @categories.each do |c| %>
       <%= li (link_to c.name, category_path(c)) %>
    <% end %>
  <%= bootstrap_list_close %>
<% end %>
<%= bootstrap_lower_menu %>
  <%= link_to t(:new), new_category_path %>
<%= bootstrap_lower_menu_close %>