<p id="notice"><%= notice %></p>

<h1>Block Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @block_groups.each do |block_group| %>
      <tr>
        <td><%= block_group.name %></td>
        <td><%= block_group.weight %></td>
        <td><%= link_to 'Show', block_group %></td>
        <td><%= link_to 'Edit', edit_block_group_path(block_group) %></td>
        <td><%= link_to 'Destroy', block_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Block Group', new_block_group_path %>
