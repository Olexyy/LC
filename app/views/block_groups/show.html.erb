<%= bootstrap_grid_start 12 %>
  <%= h1 t(:block_group) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:name)) + ': ' + @block_group.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:weight)) + ': ' + @block_group.weight.to_s %>
<%= bootstrap_grid_close %>
<%= bootstrap_lower_menu 6 %>
  <%= link_to t(:edit), edit_block_group_path(@block_group) %>
  <%= link_to t(:delete), block_group_path(@block_group), method: :delete, data: { confirm: t(:are_you_sure?) }  %>
  <%= link_to t(:back), block_groups_path %>
<%= bootstrap_lower_menu_close %>