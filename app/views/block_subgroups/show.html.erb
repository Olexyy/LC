<%= bootstrap_grid_start 12 %>
  <%= h1 t(:block_subgroup) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:name)) + ': ' + @block_subgroup.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:block_group)) + ': ' + @block_subgroup.block_group.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:weight)) + ': ' + @block_subgroup.weight.to_s %>
<%= bootstrap_grid_close %>
<%= bootstrap_lower_menu 6 %>
  <%= link_to t(:edit), edit_block_subgroup_path(@block_subgroup) %>
  <%= link_to t(:delete), block_subgroup_path(@block_subgroup), method: :delete, data: { confirm: t(:are_you_sure?) }  %>
  <%= link_to t(:back), block_subgroups_path %>
<%= bootstrap_lower_menu_close %>
