<%= bootstrap_grid_start 12 %>
  <%= h1 t(:lawsuit_blocks) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6 %>
  <% if @lawsuit_blocks.blank? %>
    <%= p t(:list_empty), Html::CSS_LEAD %>
  <% else %>
    <%= bootstrap_list %>
      <% @lawsuit_blocks.each do |lb| %>
        <%= li lb.block.name %>
      <% end %>
    <%= bootstrap_list_close %>
  <% end %>
<%= bootstrap_grid_next 6 %>
  <%= bootstrap_list %>
    <% @categories.each do |c| %>
      <%= li c.name %>
      <%= bootstrap_list %>
      <% c.subcategories.each do |s| %>
        <%= li s.name %>
        <%= bootstrap_list %>
        <% s.lawsuits.each do |l| %>
            <%= li l.name %>
        <% end %>
        <%= bootstrap_list_close %>
      <% end %>
      <%= bootstrap_list_close %>
    <% end %>
  <%= bootstrap_list_close %>
<%= bootstrap_grid_close %>
<%= bootstrap_lower_menu %>
  <%= link_to t(:back), lawsuits_path %>
<%= bootstrap_lower_menu_close %>