<% if flash.notice %>
  <%= bootstrap_row %>
    <%= bootstrap_col_12 %>
      <%= message 'info' %>
        <strong><%= flash.notice %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      <%= bootstrap_close %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
<% end %>
