<% if @messages.any? %>
  <%  @messages.each do | key, value | %>
    <div class="row">
      <div class="col-sm-12">
        <div class="alert alert-<%= key %>" role="<%= key %>">
          <strong><%= value %></strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  <% end %>
<% end %>