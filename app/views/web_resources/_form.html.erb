<%= form_for(@web_resource) do |f| %>
  <%= render partial: Html::PATH_VALIDATION_NOTICE, locals: { form: @web_resource } %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:name) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.text_field :name %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:key) %>
  <%= bootstrap_grid_next 6 %>
    <% if @web_resource.key.blank? %>
      <%= f.text_field :key %>
    <% else %>
      <%= f.text_field :key, disabled: 'disabled' %>
    <% end %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:title) %>
  <%= bootstrap_grid_next 6 %>
      <%= f.text_field :title %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:body) %>
  <%= bootstrap_grid_next 6 %>
      <%= f.text_area :body, id: :ck_editor %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_row Html::CSS_FIELD %>
    <%= bootstrap_col 2 %>
      <%= f.label t(:weight) %>
    <%= bootstrap_close %>
    <%= bootstrap_col_6 %>
      <%= f.number_field :weight %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
  <%= bootstrap_row Html::CSS_ACTIONS %>
    <%= bootstrap_col_6 Html::CSS_LIST_ITEM %>
      <%= f.submit t(:save) %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
<% end %>