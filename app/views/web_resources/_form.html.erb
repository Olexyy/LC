<%= form_for(web_resource) do |f| %>
  <% if web_resource.errors.any? %>
    <%= render partial: Html::PATH_VALIDATION_NOTICE, locals: { form: web_resource } %>
  <% end %>
  <%= bootstrap_row Html::CSS_FIELD %>
    <%= bootstrap_col 2 %>
      <%= f.label t(:name) %>
    <%= bootstrap_close %>
    <%= bootstrap_col_6 %>
      <%= f.text_field :name %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
  <%= bootstrap_row Html::CSS_FIELD %>
    <%= bootstrap_col 2 %>
      <%= f.label t(:key) %>
    <%= bootstrap_close %>
    <%= bootstrap_col_6 %>
      <%= f.text_field :key %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
  <%= bootstrap_row Html::CSS_FIELD %>
    <%= bootstrap_col 2 %>
      <%= f.label t(:title) %>
    <%= bootstrap_close %>
    <%= bootstrap_col_6 %>
      <%= f.text_field :title %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
  <%= bootstrap_row Html::CSS_FIELD %>
    <%= bootstrap_col 2 %>
      <%= f.label t(:body) %>
    <%= bootstrap_close %>
    <%= bootstrap_col_6 %>
      <%= f.text_area :body, cols: 20, rows: 10 %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
  <%= bootstrap_row Html::CSS_FIELD %>
    <%= bootstrap_col 2 %>
      <%= f.label t(:weight) %>
    <%= bootstrap_close %>
    <%= bootstrap_col_6 %>
      <%= f.number_field :weight %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
  <%= bootstrap_row Html::CSS_ACTIONS %>
    <%= bootstrap_col_6 Html::CSS_LIST_ITEM %>
      <%= f.submit t(:save) %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
<% end %>
