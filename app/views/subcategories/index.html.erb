<%= bootstrap_row %>
  <%= bootstrap_col_12 %>
    <%= h1 t(:subcategories) %>
  <%= bootstrap_close %>
<%= bootstrap_close %>
<% if @subcategories.blank? %>
  <%= bootstrap_row %>
    <%= bootstrap_col_6 Html::CSS_LIST_ITEM %>
      <%= p t(:list_empty), Html::CSS_LEAD %>
    <%= bootstrap_close %>
  <%= bootstrap_close %>
<% else %>
  <%= bootstrap_list %>
    <% @subcategories.each do |c| %>
        <%= li (link_to c.name, subcategory_path(c)) %>
    <% end %>
  <%= bootstrap_list_close %>
<% end %>
<%= bootstrap_lower_menu %>
  <%= link_to t(:new), new_subcategory_path %>
<%= bootstrap_lower_menu_close %>