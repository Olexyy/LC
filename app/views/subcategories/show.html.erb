<%= bootstrap_grid_start 12 %>
  <%= h1 t(:subcategory) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
    <%= p (lbl t(:name)) + ': ' + @subcategory.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
    <%= p (lbl t(:category)) + ': ' + @subcategory.category.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
    <%= p (lbl t(:weight)) + ': ' + @subcategory.weight.to_s %>
<%= bootstrap_grid_close %>
<%= bootstrap_lower_menu 6 %>
  <%= link_to t(:edit), edit_subcategory_path(@subcategory) %>
  <%= link_to t(:delete), subcategory_path(@subcategory), method: :delete, data: { confirm: t(:are_you_sure?) }  %>
  <%= link_to t(:back), subcategories_path %>
<%= bootstrap_lower_menu_close %>