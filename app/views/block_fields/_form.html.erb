<%= form_for(@block_field) do |f| %>
  <%= render partial: Html::PATH_VALIDATION_NOTICE, locals: { form: @block_field } %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:name) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.text_field :name %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:marker) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.text_field :marker %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:data_type) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.select :data_type, BlockField.data_types_list %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:text) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.text_field :text %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:weight) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.number_field :weight %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 6 , Html::CSS_LIST_ITEM, Html::CSS_ACTIONS %>
    <%= f.submit t(:save) %>
  <%= bootstrap_grid_close %>
<% end %>