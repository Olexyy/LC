<%= bootstrap_grid_start 12 %>
  <%= h1 t(:block_field) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:name)) + ': ' + @block_field.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:marker)) + ': ' + @block_field.marker %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:data_type)) + ': ' + @block_field.data_type %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:text)) + ': ' + @block_field.text %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:weight)) + ': ' + @block_field.weight.to_s %>
<%= bootstrap_grid_close %>
<%= bootstrap_lower_menu 6 %>
  <%= link_to t(:edit), edit_block_field_path(@block_field) %>
  <%= link_to t(:delete), block_field_path(@block_field), method: :delete, data: { confirm: t(:are_you_sure?) }  %>
  <%= link_to t(:back), block_fields_path %>
<%= bootstrap_lower_menu_close %>