<%= form_for(@text_style) do |f| %>
  <%= render partial: Html::PATH_VALIDATION_NOTICE, locals: { form: @text_style } %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:name) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.text_field :name %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:weight) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.number_field :weight %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:tag) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.select :tag, TextStyle.tags.keys.to_a %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:margin_left) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.select :margin_left, TextStyle.margin_lefts.keys.to_a %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:text_align) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.select :text_align, TextStyle.text_aligns.keys.to_a %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:strong) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.check_box :strong %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:underline) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.check_box :underline %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 2 ,'', Html::CSS_FIELD %>
    <%= f.label t(:italic) %>
  <%= bootstrap_grid_next 6 %>
    <%= f.check_box :italic %>
  <%= bootstrap_grid_close %>
  <%= bootstrap_grid_start 6 , Html::CSS_LIST_ITEM, Html::CSS_ACTIONS %>
    <%= f.submit t(:save) %>
  <%= bootstrap_grid_close %>
<% end %>
