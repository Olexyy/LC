<%= bootstrap_grid_start 12 %>
  <%= h1 t(:text_style) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:name)) + ': ' + @text_style.name %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:weight)) + ': ' + @text_style.weight.to_s %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:tag)) + ': ' + @text_style.tag %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:margin_left)) + ': ' + @text_style.margin_left %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:text_align)) + ': ' + @text_style.text_align %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:strong)) + ': ' + bool_t(@text_style.strong) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:underline)) + ': ' + bool_t(@text_style.underline) %>
<%= bootstrap_grid_close %>
<%= bootstrap_grid_start 6, Html::CSS_SHOW %>
  <%= p (lbl t(:italic)) + ': ' + bool_t(@text_style.italic) %>
<%= bootstrap_grid_close %>
<%= bootstrap_lower_menu 6 %>
<%=   link_to t(:edit), edit_text_style_path(@text_style) %>
<%=   link_to t(:delete), text_style_path(@text_style), method: :delete, data: { confirm: t(:are_you_sure?) }  %>
<%=   link_to t(:back), text_styles_path %>
<%= bootstrap_lower_menu_close %>
